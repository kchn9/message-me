<h2 class="ui center aligned header">Log in</h2>

<%= form_with scope: :session, url: login_path , data: { turbo: false }, class: "ui form" do |f| %>
  <div class="field">
    <%= f.label :username %>
    <div class="ui left icon input">
      <%= f.text_field :username %>
      <i class="user icon"></i>
    </div>
  </div>
  <div class="field">
    <%= f.label :password %>
    <div class="ui left icon input">
      <%= f.password_field :password %>
      <i class="lock icon"></i>
    </div>
  </div>
  <%= f.submit "Log in", class: "ui submit primary button" %>
<% end %>
