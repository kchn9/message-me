<div class="ui small segment basic">
  <div class="comment ui segment basic">
    <a class="avatar">
      <%= get_avatar_for_username("#{message.user.username}") %>
    </a>
    <div class="content">
      <%= link_to message.user.username, message.user, class: "author" %>
      <div class="metadata">
        <span class="date">
          <%= distance_of_time_in_words_to_now message.created_at %> ago
        </span>
      </div>
      <div class="text">
        <%= message.body %>
      </div>
    </div>
  </div>
</div>
