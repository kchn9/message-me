<div class="ui raised padded blue secondary small segment container">
  <div class="ui segment container minimal comments">

    <div class="ui segment small basic clearing"> <!-- clearing for user messages -->
      <%= render "message" %>
    </div>

    <div class="ui small segment basic">
      <div class="comment ui segment basic">
        <a class="avatar">
          <%= random_avatar_for_user("Natalka") %>
        </a>
        <div class="content">
          <a class="author">Nati</a>
          <div class="metadata">
            <span class="date">Today at 5:44PM</span>
          </div>
          <div class="text">
            Jedzonko na 15 i pałeczki dawać!
          </div>
        </div>
      </div>
    </div>

  </div>

  <form class="ui form">
    <div class="field">
      <textarea rows="3" placeholder="Enter a message..."></textarea>
      <div class="ui bottom attached compact blue labeled submit icon button">
        <i class="icon edit"></i> Send
      </div>
    </div>
  </form>
</div>
