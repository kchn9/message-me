<div class="ui raised padded blue secondary small segment container">
  <h2 class="ui header center aligned">Who is online?</h2>
  <section class="ui large relaxed animated selection divided list">

  <% if @users %>
    <% @users.each do |user| %>
      <div class="item">
        <%= get_avatar_for_username("#{user.username}") %>
        <div class="content">
          <%= link_to user.username, user, class: "header" %>
          <div class="description">
            Last seen <a><b>just now.</b></a>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

  </section>
</div>
