<div class="ui raised padded blue secondary small segment container">

  <h2 class="ui header center aligned">
    <span class="content">New users</span>
    <div class="sub header">Meet new friends</div>
  </h2>

  <section class="ui unstackable items animated list">

    <% if @users %>
      <% @users.each do |user| %>
        <div class="item">

          <div class="ui tiny image">

            <%= get_avatar_for_username("#{user.username}") %>

          </div>

          <div class="content">
            <%= link_to user.username, user, class: "ui header" %>
            <div class="description">
                Joined <%= time_ago_in_words user.created_at %> ago
            </div>
          </div>

        </div>
      <% end %>
    <% end %>

  </section>
</div>
