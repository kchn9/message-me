<div class="ui raised padded blue secondary small segment container">

  <h2 class="ui header center aligned">Users</h2>
  <section class="ui large relaxed divided list">

  <% if @users %>
    <% @users.each do |user| %>
      <div class="item">
        <%= get_avatar_for_username("#{user.username}") %>
        <div class="content">
          <%= link_to user.username, user, class: "header" %>
          <div class="description">
              Joined <%= time_ago_in_words user.created_at %> ago
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

  </section>
</div>
