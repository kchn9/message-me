<div class="ui small segment basic">
  <div class="comment ui segment basic">
    <a class="avatar">
      <%= get_avatar_for_username("#{message.user.username}") %>
    </a>
    <div class="content">
      <a class="author">
        <%= message.user.username %>
      </a>
      <div class="metadata">
        <span class="date">
          <%= message.created_at %>
        </span>
      </div>
      <div class="text">
        <%= message.body %>
      </div>
    </div>
  </div>
</div>
