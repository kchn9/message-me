<div class="comment ui segment right floated basic"> <!-- right floated for user messages -->
  <a class="avatar">
    <%= get_avatar_for_username("#{message.user.username}") %>
  </a>
  <div class="content">
    <a class="author">
      <%= message.user_id %>
    </a>
    <div class="metadata">
      <span class="date">
        <%= message.created_at %>
      </span>
    </div>
    <div class="text">
      <%= message.body %>
    </div>
  </div>
</div>
