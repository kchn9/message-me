<h2 class="ui center aligned header">Create new account</h2>
<%= form_with model: @user, data: { turbo: false }, class: "ui form" do |f| %>
  <div class="required field">
    <%= f.label :username %>
    <div class="ui left icon input">
      <%= f.text_field :username %>
      <i class="user icon"></i>
    </div>
  </div>
  <div class="required field">
    <%= f.label :password %>
    <div class="ui left icon input">
      <%= f.password_field :password %>
      <i class="lock icon"></i>
    </div>
  </div>
  <div class="required field">
    <%= f.label "Repeat password" %>
    <div class="ui left icon input">
      <%= f.password_field :password %>
      <i class="lock icon"></i>
    </div>
  </div>
  <div class="required inline field">
    <div class="ui checkbox">
      <%= f.check_box :terms %>
      <%= f.label :terms, "I agree to the terms and conditions" %>
    </div>
  </div>
  <%= f.submit "Sign up", class: "ui submit primary button" %>
<% end %>
