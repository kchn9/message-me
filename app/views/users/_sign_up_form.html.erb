<%= form_with model: @user, url: sign_up_path, local: true, data: { turbo: false }, class: "ui form" do |f| %>
  <div class="<%= class_names('required', 'field', error: @user.errors[:username].any? ) %>">
    <%= f.label :username %>
    <div class="ui left icon input">
      <%= f.text_field :username, placeholder: "Username" %>
      <i class="user icon"></i>
    </div>
  </div>
  <div class="<%= class_names('required', 'field', error: @user.errors[:password].any? ) %>">
    <%= f.label :password %>
    <div class="ui left icon input">
      <%= f.password_field :password, placeholder: "Password" %>
      <i class="lock icon"></i>
    </div>
  </div>
  <div class="<%= class_names('required', 'field', error: @user.errors[:password_confirmation].any? ) %>">
    <%= f.label :password_confirmation, "Repeat password" %>
    <div class="ui left icon input">
      <%= f.password_field :password_confirmation, placeholder: "Repeat password" %>
      <i class="lock icon"></i>
    </div>
  </div>
  <div class="<%= class_names('required', 'inline', 'field', error: @user.errors[:terms].any? ) %>">
    <div class="ui checkbox">
      <%= f.check_box :terms %>
      <%= f.label :terms, raw("I agree to the <a href=\"#\">terms and conditions.</a>") %>
    </div>
  </div>
  <%= f.submit "Sign up", class: "ui submit primary button" %>
<% end %>
